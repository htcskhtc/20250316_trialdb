<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Password Data</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>User Password Data</h1>
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                <% if (data && data.length) { %>
                    <% data.forEach(function(user) { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.password %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="2">No data available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <script src="/js/main.js"></script>
</body>
</html>